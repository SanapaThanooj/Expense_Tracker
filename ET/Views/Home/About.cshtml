@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5 py-5 px-4 bg-light rounded-4 shadow-lg" data-aos="fade-up">
    <div class="text-center mb-5" data-aos="zoom-in" data-aos-delay="100">
        <h2 class="display-5 fw-bold text-primary">📘 About Expense Tracker</h2>
        <p class="lead text-muted">Your smart personal finance companion</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6" data-aos="fade-right" data-aos-delay="200">
            <div class="p-4 bg-white shadow-sm rounded-3 h-100">
                <h4 class="text-success">🌟 Who We Are</h4>
                <p>
                    Expense Tracker is a minimal and user-friendly web app designed to help individuals manage their daily finances with ease.
                    From groceries to travel, we help you take control of your spending.
                </p>
            </div>
        </div>

        <div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
            <div class="p-4 bg-white shadow-sm rounded-3 h-100">
                <h4 class="text-success">🎯 Our Mission</h4>
                <p>
                    To empower users by offering a streamlined and reliable tool to record, review, and analyze expenses — anytime, anywhere.
                </p>
            </div>
        </div>
    </div>

    <div class="mt-5" data-aos="fade-up" data-aos-delay="400">
        <h4 class="mb-3 text-secondary">🚀 Features at a Glance</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">✅ Add, edit, and delete expenses easily</li>
            <li class="list-group-item">📂 Filter by category and date</li>
            <li class="list-group-item">📊 Dashboard with analytics and charts</li>
            <li class="list-group-item">☁️ Deployed on Azure for high availability</li>
        </ul>
    </div>
</div>
