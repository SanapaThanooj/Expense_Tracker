@model ET.Models.expense

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Expense</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-4">Are you sure you want to delete this record?</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Amount)</dd>

                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpenseDate)</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.category)</dd>

                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
